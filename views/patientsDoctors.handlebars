 <h1>Sacred Heart Hospital Patient Doctor List</h1>
 <h2>Doctors for {{name}}</h2>
        <br>
       <a href="/" class="btn btn-primary">Return to Portal</a>
       <br>
        <br>
        <a href="/addDoctor/id={{id}}" class="btn btn-primary">Add Doctor</a>
        <br>
        <br>
        <table>
            <tr>
                <th>Doctor's Name</th>
                <th>Doctor Department</th>
            </tr>
            {{#each results}}
            <tr>
                <td>{{this.First_Name}} {{this.Last_Name}}</td>
                <td>{{this.Department_Name}}</td>
                <td><a href="#" class="btn btn-danger">Delete</a></td>
            </tr>
            {{/each}}
        </table>