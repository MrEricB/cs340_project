        <br>
    
<form action="/editPatient" method="POST">
<input type="hidden" value="{{results.ID}}" name="pid">
  First name:<br>
  <input type="text" name="firstname" value="{{results.First_Name}}">
  <br>
  Last name:<br>
  <input type="text" name="lastname" value="{{results.Last_Name}}">
  <br>
    DOB:<br>
  <input type="date" name="dob" value="{{results.DOB}}">
  <br>
    Chief Complaint:<br>
  <input type="text" name="chiefcomplaint" value="{{results.Chief_Complaint}}">
  <br>
  Insured:<br>
  {{#if results.Insured}}
    <input type="radio" name="insured" value="1" checked="checked"> Yes<br>
    <input type="radio" name="insured" value="0"> No<br>
    {{else}}
        <input type="radio" name="insured" value="1"> Yes<br>
    <input type="radio" name="insured" value="0" checked="checked"> No<br>
    {{/if}}
  <br>


   Paid:<br>
    {{#if results.Treatment_Paid}}
    <input type="radio" name="paid" value="1" checked="checked"> Yes<br>
    <input type="radio" name="paid" value="0"> No<br>
    {{else}}
        <input type="radio" name="paid" value="1"> Yes<br>
    <input type="radio" name="paid" value="0" checked="checked"> No<br>
    {{/if}}
  <br>

  <input type="submit" value="Submit">
</form>
