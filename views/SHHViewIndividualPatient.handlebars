<h1>Sacred Heart Hospital Patient: {{results.First_Name}} {{results.Last_Name}}</h1>
        <br>
        <a href="/patients" class="btn btn-primary">All Patients</a>
        <br>
        <a href="/" class="btn btn-primary">Main Page</a>
        <br>
        {{!-- <a href="#" class="btn btn-info">Update Patient: {{results.First_Name}} {{results.Last_Name}} (Needs Implemented)</a> --}}
        {{!-- <br> --}}
        <br>
        <table>
            <tr>
                <th>Patient Name</th>
                <th>Date of Birth</th>
                <th>Chief Complaint</th>
                <th>Insured</th>
                <th>Bill Paid</th>
            </tr>
            <tr>
                <td>{{results.First_Name}} {{results.Last_Name}}</td>
                <td>{{results.DOB}}</td>
                <td>{{results.Chief_Complaint}}</td>
                {{#if results.Insured}}
                    <td>Yes</td>
                {{else}}
                    <td>No</td>
                {{/if}}
                {{#if results.Treatment_Paid}}
                <td>Yes</td>
                {{else}}
                <td>No</td>
                {{/if}}
            </tr>
        </table>
        </table>
        <h3>Doctors:</h3>
        <a href="/addDoctor/id={{results.ID}}" class="btn btn-primary"> Add Doctor</a>
        <table>
            <thead>
            <tr>
                <th>Name</th>
                <th>Department</th>
            </tr>
            </thead>

            {{#each doctors}}
            <tr>
                <td>{{this.First_Name}} {{this.Last_Name}}</td>
                <td>{{this.Department_Name}}</td>
                <td><a href="/allemployees/id={{this.ID}}" class="btn btn-info">Details</a></td>
                <td>
                <form action="/removeDoctorPatient/pid={{this.PID}}&did={{this.ID}}" method="POST">
                    <input type="submit" value="Remove Doctor" class="btn btn-danger">
                </form>
                </td>

            </tr>
            {{/each}}
        </table>
        <br>
        <h3>Treatments:</h3>
        <a href="/addTreatment/id={{results.ID}}" class="btn btn-primary"> Add Treatment</a>
       <table>
            <thead>
            <tr>
                <th>Treatment</th>
            </tr>
            </thead>

            {{#each treatments}}
            <tr>
                <td>{{this.Treatment_Type}}</td>
                <td><a href="/treatments/{{this.ID}}" class="btn btn-info">Details</a></td>
                <td>
                <form action="/removeTreatmentPatient/pid={{this.PID}}&tid={{this.ID}}" method="POST">
                    <input type="submit" value="Remove Treatement" class="btn btn-danger">
                </form>
                </td>
            </tr>
            {{/each}}
        </table>