<form action="/editTreatments" method="POST">
    <input type="hidden" name="tid" value="{{results.ID}}">
  Treatment Name:<br>
  <input type="text" name="treatment_type" value="{{results.Treatment_Type}}">
  <br>
  Insurance Covered:<br>
  {{#if results.Insurance_covers}}
    <input type="radio" name="insurance_cover" value="1" checked="checked"> Yes<br>
    <input type="radio" name="insurance_cover" value="0"> No<br>
  {{else}}
        <input type="radio" name="insurance_cover" value="1"> Yes<br>
    <input type="radio" name="insurance_cover" value="0" checked="checked"> No<br>
  {{/if}}
    Insurance Price:<br>
  <input type="text" name="insurance_price" value="{{results.Insured_Price}}">
<br>
    Uninsured Price:<br>
  <input type="text" name="uninsurance_price" value="{{results.Uninsured_Price}}">
  <br>

  <input type="submit" value="Submit">
</form>
