<h1>Sacred Heart Hospital Patient List</h1>
        <br>
        <a href="/" class="btn btn-primary">Return to Portal</a>
        <br>
        <br>
        <a href="/createPatient" class="btn btn-primary">Add Patient</a>
        <br>
        <br>
        <table>
            <tr>
                <th>Patient Name</th>
                <th>Chief Complaint</th>
            </tr>
            {{#each results}}
            <tr>
                <td>{{this.First_Name}} {{this.Last_Name}}</td>
                <td>{{this.Chief_Complaint}}</td>
                <td><a href="/patients/id={{this.ID}}" class="btn btn-secondary">View Details</a></td>
                <td><a href="/editPatient/id={{this.ID}}" class="btn btn-info">Edit</a></td>
                <td>
                <form action="/deletePatient" method="POST">
                    <input type="hidden" name="pid" value="{{this.ID}}">
                    <input type="submit" value="Delete" class="btn btn-danger">
                </form>
                </td>

            </tr>
            {{/each}}