<h1>Sacred Heart Hospital Employee List</h1>
        <br>
        <a href="/" class="btn btn-primary">Return to Portal</a>
        <br>
        <br>
        {{!-- <button onclick="window.location.href='SHHEmployeeManagement.html';"><strong>Create/Edit Employee Listings</strong></button> --}}
        <a href="/createEmployee" class="btn btn-primary">Add Employee</a>
        <br>
        <br>
        <table>
            <tr>
                <th>Employee Name</th>
                <th>Department</th>
            </tr>
            {{#each results}}
            <tr>
                <td>{{this.First_Name}} {{this.Last_Name}}</td>
                <td>{{this.Department_Name}}</td>
                <td><a class="btn btn-secondary" href="/allemployees/id={{this.ID}}">View Details</a></td>
                {{!-- <td><a class="btn btn-info" href="/editEmployee/id={{this.ID}}">Edit</a></td> --}}
                <td>
                    <form action="/deleteEmployee" method="POST">
                        <input type="hidden" name="eid" value="{{this.ID}}">
                        <input type="submit" value="Delete" class="btn btn-danger">
                    </form> 
                </td>
            </tr>
            {{/each}}
        </table>
